i = int(input("Enter integer, the input ends if it is 0: "))
countpos = 0
countneg = 0
total = 0
count = 0
while i != 0:
    if i > 0:
        countpos += 1
    elif i < 0:
        countneg += 1
    total += i
    count += 1
    i = int(input("Enter integer, the input ends if it is 0: "))
if (countpos + countneg) == 0:
    print("No numbers are entered except 0")
    exit()
avg = (total/count)
count += 1
print("number of positives",countpos)
print("number of negitives",countneg)
print("The total is",count)
print("The average is", avg)
